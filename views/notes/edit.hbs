
<div class="container">
    <div class="card">
    <div class="card-body">
    <h2>Edit {{note.title}}</h2>
    <div class="col-8">


        <form action="/{{note.id}}?_method=PUT" method="POST">
            <div class="form-group">
                <label for="title">Class Notes</label>
                <input type="text" name="title" id="title" value='{{note.title}}'>
            </div>
            <div class="form-group">
                <label for="chapter">Chapter</label>
                <input type="text" name="chapter" id="chapter" value='{{note.chapter}}'></input>
            </div>
            <div class="form-group">
                <label for="noteDescription">Note Description</label>
                <textarea class="form-control" name="noteDescription" id="noteDescription" value='{{note.noteDescription}}'></textarea>
            </div>
            <div class="form-group">
                <label for="hints">Hints</label>
                <textarea class="form-control" name="hints" id="hints" value='{{note.hints}}'></textarea>
            </div>
            <input type="submit" value="Submit">
             <a href="/{{note.id}}">Back</a>
        </form>


    </div>
</div> 
    </div>
</div> 

