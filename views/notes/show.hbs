{{!-- show --}}
<h3 class="text-center">Notes</h3>

<div class="container">
    <h2 class="text-center">{{note.title}}</h2>
    <div class="col-sm-8">
        <p>{{note.chapter}}</p>
        <p>{{note.noteDescription}}</p>
        <p>{{note.hints}}</p>
    </div>
    <div class="text-center">
        <a class="action-btn btn btn-info" href="/notes/{{note.id}}/edit">EDIT</a>
        <form class="delete-form" action="/notes/{{note.id}}?_method=DELETE" method="POST">
            <input class="action-btn btn btn-danger" type="submit" value="DELETE">
        </form>
    </div>
</div> 

