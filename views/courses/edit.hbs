{{!-- edit --}}
<div class="container">
    <div class="card">
    <div class="card-body">
    <h2>Edit {{course.courseName}}</h2>
    <div class="col-8">


        <form action="/{{course.id}}?_method=PUT" method="POST">
            <div class="form-group">
                <label for="courseName">Course</label>
                <input type="text" name="name" id="name" value='{{course.courseName}}'>
            </div>
            <div class="form-group">
                <label for="university">University</label>
                <input type="text" name="university" id="university" value='{{course.university}}'>
            </div>
            <div class="form-group">
                <label for="professorName">Professor Name</label>
                <input type="text" name="professorName" id="professorName" value='{{course.professorName}}'></input>
            </div>
            <div class="form-group">
                <label for="term">Term</label>
                <textarea class="form-control" name="term" id="term" value='{{course.term}}'></textarea>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea class="form-control" name="description" id="description" value='{{course.description}}'></textarea>
            </div>
            
            <input type="submit" value="Submit">
             <a href="/{{course.id}}">Back</a>
        </form>


    </div>
</div>
    </div>
</div>
