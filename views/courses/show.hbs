{{!-- show --}}
<div class="container">
  <div class="card">
    <div class="card-body">
      <h3 class="text-center">Courses</h3>
      <h2 class="text-center">{{course.courseName}}</h2>
      <div class="col-sm-8">
        <p>{{course.university}}</p>
        <p>{{course.professorName}}</p>
        <p>{{course.term}}</p>
        <p>{{course.description}}</p>
      </div>
      <div class="text-center">
        <a class="action-btn btn btn-info" href="/{{course.id}}/edit">EDIT</a>
        <form class="delete-form" action="/{{course.id}}?_method=DELETE" method="POST">
          <input class="action-btn btn btn-danger" type="submit" value="DELETE">
        </form>
      </div>
    </div>
  </div>
</div>