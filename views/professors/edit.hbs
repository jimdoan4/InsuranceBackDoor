{{!-- edit --}}
<div class="container">
    <a href="/{{professor.id}}">Back</a>
    <h2>Edit {{professor.name}}</h2>
    <div class="col-8">


        <form action="/{{professor.id}}?_method=PUT" method="POST">
            <div class="form-group">
                <label for="name">Professors</label>
                <input type="text" name="name" id="name" value='{{professor.name}}'>
            </div>
            <div class="form-group">
                <label for="courseNumber">Course Number</label>
                <input type="text" name="courseNumber" id="courseNumber" value='{{professor.courseNumber}}'>
            </div>
            <div class="form-group">
                <label for="difficultyLevel">Difficulty Level</label>
                <input type="text" name="difficultyLevel" id="difficultyLevel" value='{{professor.difficultyLevel}}'></input>
            </div>
            <div class="form-group">
                <label for="rating">Rating</label>
                <textarea class="form-control" name="rating" id="rating" value='{{professor.rating}}'></textarea>
            </div>
            <div class="form-group">
                <label for="comments">Comments</label>
                <textarea class="form-control" name="comments" id="comments" value='{{professor.comments}}'></textarea>
            </div>
     <input type="submit" value="Submit">
        </form>


    </div>
</div>


